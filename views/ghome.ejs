<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <h1>home</h1>
</head>
<body>
    <nav>
        <div>
            <ul>
                <li ><a href="/home">Home</a></li>
                <li ><a href="/watchlist">Watchlist</a></li>
                <li><a href="/completed">Completed</a></li>
                <li ><a href="/reviews">Reviews</a></li>
                <li ><a href="/community">Community</a></li>

            </ul>
        </div>
        <div>
            <form action="/search" method="get">
                <input type="text" placeholder="Search Movies" name="Movies">
                <button type="submit">Go</button>
            </form>
        </div>
        <div>
            <form action="/logout" method="post">
                <button type="submit">Logout</button>
            </form>
        </div>
    </nav>
    <div>
        <h2>Trending Movies</h2>
        <div>
            <% if (locals.trendingMovies && locals.trendingMovies.length > 0) { %>
                <% locals.trendingMovies.forEach(Movie => { %>
                    <div>
                        <div>
                            <img src="<%= Movie.MOVIE_IMAGE_URL %>" alt="">
                        </div>
                        <div><%= Movie.TITLE %></div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No Trending Movie</p>
            <% } %>
        </div>
    </div>
    
    


    