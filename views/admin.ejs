<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="admin.css">
</head>
<body>
    <div id="nav">
        <a href="/admin">Movies in database</a>
        <a href="/adminMovies">Add Movies</a>
        <a href="/showArtists">Artists in Database</a>
        <a href="/addArtists">Add Artists in Database</a>
        <a href="/adminGenre">Genres in Database</a>
        <a href="/adminMovieGenre">Link Movies with Genres </a>
        <a href="/adminMovieArtist">Link Movies with Artists</a>
        <!--<form id='search' action="/search">
            <input type="text" placeholder="Search Movies">
            <button type="submit">Go</button>
        </form>-->
        <form id="login" action="/logout" method="post">
            <button id="loginbuttton" type="submit">Logout</button>
        </form>        
    </div>
    <div id="cursor"></div>
    <div id="cursor-blur"></div>
    <div id="main">
        <div id="page1">
        <div id="movie">
            <h1>Movies in Database</h1>
        <div id="moviedatabase"> 
        <% if (locals.moviesInDatabase) {%>
        <table>
            <thead>
                <tr>
                    <th>Movie ID</th>
                    <th>Movie Name</th>

                </tr>
            </thead>
            
            <tbody>
                <% moviesInDatabase.forEach(Movie =>{ %>
               
                    <tr>
                        <td><%= Movie.MOVIE_ID %></td>
                        <td><%= Movie.TITLE %></td>
                    </tr>
                <% }); %>

            </tbody>

        </table>
        <% } else { %>
            <p>No Movies in Database</p>
        <% } %>

    </div>
</div>
</div>
</div>
