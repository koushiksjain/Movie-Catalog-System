<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/community.css">
</head>
<body>
    <div id="nav">
        <a href="/home">Home</a>
        <a href="/watchlist">WatchList</a>
        <a href="/completed">Completed</a>
        <a href="/reviews">Reviews</a>
        <a href="/community">Community</a>
        <a href="/genres">Genres</a>
        <form id='search' action="/search">
            <input type="text" placeholder="Search Movies" name="Movies">
            <button type="submit">Go</button>
        </form>
        <form id="login" action="/logout" method="post">
            <button id="loginbuttton" type="submit">Logout</button>
        </form>        
    </div>
    <div id="main">
        <div id="page1">
    <div id="review">
        <h1>Top Reviews</h1>
        <% if(locals.reviews && locals.reviews.length>0) { %>
            <% reviews.forEach(review =>{ %>
            <div id="container">
                <div id="image">
                    <img src="<%= review.MOVIE_IMAGE_URL %>" alt="">
                </div>
            <div id="container2">
                <div id="title"> <a href="/movie/<%= review.MOVIE_ID %>"><%= review.TITLE %></a></div>
                <div id="user_reviews">
                    <h2><%= review.USERNAME %></h2>
                    <p><%= review.TEXT %></p>
                    <h3>Score :<%= review.SCORE %>/10</h3>
                    <p><%= review.LIKES %> <a href="/like?review_id=<%= review.REVIEW_ID %>"><span class="material-symbols-outlined">
                        thumb_up
                        </span></a></p>
                </div>
            </div>

            </div>
            <% }); %>
        <% } else { %>
            <p>No Reviews Available right now</p>
        <% } %>

    </div>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="/home.js"></script>
</body>
</html>