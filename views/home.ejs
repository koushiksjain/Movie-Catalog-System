        <div id="main">
            <div id="page1">
                <h1>Welcome to the Movie Database!</h1>
                <h2>Search, Browse, and Discover Movies.</h2>
            </div>
            <div id="page2">
                <div id="root">
                    <header class="max_width px-4 py-10">
                        <h1 class="text-5xl font-bold text-center ">Trending Movies</h1>
                        <section class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 py-10">
                            <% if (locals.trendingMovies && locals.trendingMovies.length > 0) { %>
                                <% locals.trendingMovies.forEach(Movie => { %>
                            <a class="bg-black relative transition duration-200 ease-in transform hover:scale-110" href="">
                                
                                <div class="h-[20rem] sm:h-[25rem] lg:h-[30rem]">
                                    <img src="<%= Movie.MOVIE_IMAGE_URL %>" alt="Movie name" class="rounded-t-md"></div>
                                    <h1 class="text-center py-2 text-xl"><a href="/movie/<%= Movie.MOVIE_ID %>"><%= Movie.TITLE %></a></h1>
                                    <div class="absolute top-2 left-2 bg-blue rounded-full px-2 py-1 text-sm flex items-center gap-1"><span>7.0</span>
                                        <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 1024 1024" class="text-lg" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M908.1 353.1l-253.9-36.9L540.7 86.1c-3.1-6.3-8.2-11.4-14.5-14.5-15.8-7.8-35-1.3-42.9 14.5L369.8 316.2l-253.9 36.9c-7 1-13.4 4.3-18.3 9.3a32.05 32.05 0 0 0 .6 45.3l183.7 179.1-43.4 252.9a31.95 31.95 0 0 0 46.4 33.7L512 754l227.1 119.4c6.2 3.3 13.4 4.4 20.3 3.2 17.4-3 29.1-19.5 26.1-36.9l-43.4-252.9 183.7-179.1c5-4.9 8.3-11.3 9.3-18.3 2.7-17.5-9.5-33.7-27-36.3z"></path>
                                        </svg>
                                    </div>
                                    <% }); %>
                                 <% } else { %>
                            <p>No Trending Movie</p>
                                <% } %>
                                </a>
                                            
        </div>
        
        </div>
